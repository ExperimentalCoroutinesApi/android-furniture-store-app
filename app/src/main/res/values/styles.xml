<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="h4">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">@color/md_theme_dark_shadow</item>
        <item name="android:textSize">@dimen/h4TextSize</item>
    </style>

    <style name="h2">
        <item name="android:fontFamily">@font/rubik_light</item>
        <item name="android:textColor">@color/md_theme_gray_text</item>
        <item name="android:textSize">@dimen/h2TextSize</item>
    </style>

    <style name="h3">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/md_theme_light_shadow</item>
        <item name="android:textSize">@dimen/h3TextSize</item>
    </style>

    <style name="orangeButtonStyle">
        <item name="android:background">@drawable/orange_background</item>
        <item name="android:fontFamily">@font/poppins_extra_bold</item>
        <item name="android:textColor">@color/md_theme_light_onPrimary</item>
        <item name="android:textSize">@dimen/h2TextSize</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="whiteButtonStyle">
        <item name="android:background">@drawable/white_background</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">@color/md_theme_gray_text</item>
        <item name="android:textSize">@dimen/h2TextSize</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="roundButtonStyle">
        <item name="android:background">@drawable/round_button</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">@dimen/h2TextSize</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="editText">
        <item name="android:background">@color/md_theme_light_outline</item>
        <item name="singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/rubik_light</item>
    </style>

    <style name="TextShadowStyleH4">
        <item name="android:shadowColor">@color/md_theme_gray_text</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">@color/md_theme_light_onPrimary</item>
        <item name="android:textSize">@dimen/h4TextSize</item>
    </style>

    <style name="TextShadowStyleH2">
        <item name="android:shadowColor">@color/md_theme_gray_text</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:fontFamily">@font/rubik_light</item>
        <item name="android:textColor">@color/md_theme_light_onPrimary</item>
        <item name="android:textSize">@dimen/h2ShadowTextSize</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@color/md_theme_light_onPrimary</item>
        <item name="android:windowSoftInputMode">adjustResize</item>

    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_background</item>
    </style>

    <style name="tabLayout_text" parent="TextAppearance.AppCompat">
        <item name="textAllCaps">true</item>
        <item name="color">@color/orange</item>
        <item name="android:fontFamily">@font/inter_bold</item>

    </style>

    <dimen name="h4TextSize">38sp</dimen>
    <dimen name="h2TextSize">18sp</dimen>
    <dimen name="h3TextSize">22sp</dimen>
    <dimen name="h2ShadowTextSize">15sp</dimen>


</resources>