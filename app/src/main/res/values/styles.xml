<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="titleInterGrey">
        <item name="android:fontFamily">@font/inter_extra_bold</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/h1TextSize</item>
    </style>

    <style name="titleInterWhite">
        <item name="android:fontFamily">@font/inter_extra_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/h1TextSize</item>
    </style>

    <style name="textInterWhite">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/h3TextSize</item>
    </style>

    <style name="textGreyNeutral">
        <item name="android:fontFamily">@font/manrope_regular</item>
        <item name="android:textColor">@color/neutral_70</item>
        <item name="android:textSize">@dimen/h3TextSize</item>
    </style>

    <style name="profileTitleText">
        <item name="android:fontFamily">@font/manrope_medium</item>
        <item name="android:textColor">@color/neutral_90</item>
        <item name="android:textSize">@dimen/h3TextSize</item>
    </style>

    <style name="textWhiteSale">
        <item name="android:fontFamily">@font/manrope_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="textCardBlack">
        <item name="android:fontFamily">@font/manrope_regular</item>
        <item name="android:textColor">@color/neutral_90</item>
        <item name="android:textSize">@dimen/h5TextSize</item>
    </style>

    <style name="textProductDetails">
        <item name="android:fontFamily">@font/manrope_regular</item>
        <item name="android:textColor">@color/neutral_90</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="textSearchBar">
        <item name="android:fontFamily">@font/manrope_regular</item>
        <item name="android:textColor">@color/neutral_90</item>
        <item name="android:textSize">@dimen/h4TextSize</item>
    </style>

    <style name="textGreenNeutral">
        <item name="android:fontFamily">@font/manrope_regular</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/h3TextSize</item>
    </style>

    <style name="titleBlackNeutral">
        <item name="android:fontFamily">@font/manrope_extra_bold</item>
        <item name="android:textColor">@color/neutral_90</item>
        <item name="android:textSize">@dimen/h1TextSize</item>
    </style>

    <style name="circular_image">
        <item name="cornerSize">50%</item>
    </style>


    <style name="textInterBlack">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h3TextSize</item>
    </style>

    <style name="textInterOrange">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">@dimen/h3TextSize</item>
    </style>

    <style name="subtitleInterGrey">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/h2TextSize</item>
    </style>

    <style name="subtitleInterWhite">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/h2TextSize</item>
    </style>

    <style name="smallTextInterGrey">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/h4TextSize</item>
    </style>

    <style name="smallTextInterWhite">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/h4TextSize</item>
    </style>

    <style name="smallTextInterOrange">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">@dimen/h4TextSize</item>
    </style>

    <style name="orangeButtonStyle">
        <item name="android:background">@drawable/orange_background</item>
        <item name="android:fontFamily">@font/inter_extra_bold</item>
        <item name="android:textColor">@color/grey</item>
        <item name="height">@dimen/smallButtonHeight</item>
        <item name="android:textSize">@dimen/h4TextSize</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="greenButtonStyle">
        <item name="android:background">@drawable/green_button_background</item>
        <item name="fontFamily">@font/manrope_semi_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/h4TextSize</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="outlinedButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/green</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>


    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/manrope_semi_bold</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/h4TextSize</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">11dp</item>
        <item name="strokeColor">@color/green</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="whiteButtonStyle">
        <item name="android:background">@drawable/search_bar_background</item>
        <item name="android:fontFamily">@font/manrope_semi_bold</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/h5TextSize</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="specificCornerCut">
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>

        <item name="cornerSizeBottomRight">8dp</item>
        <item name="cornerFamilyBottomRight">rounded</item>

    </style>


    <style name="roundButtonStyle">
        <item name="android:background">@drawable/round_button</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">@dimen/h3TextSize</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="editText">
        <item name="backgroundTint">@color/white</item>
        <item name="singleLine">true</item>
        <item name="android:textColor">@color/neutral_90</item>
        <item name="android:textSize">@dimen/h5TextSize</item>
        <item name="android:fontFamily">@font/manrope_regular</item>
    </style>

    <style name="editTextField">
        <item name="singleLine">true</item>
        <item name="android:background">@drawable/white_edit_text_background</item>
        <item name="android:textColorHint">@color/neutral_90</item>
        <item name="hintTextColor">@color/neutral_90</item>
        <item name="android:textSize">@dimen/h4TextSize</item>
        <item name="android:fontFamily">@font/manrope_regular</item>

    </style>

    <style name="searchBar">
        <item name="singleLine">true</item>
        <item name="android:background">@drawable/search_bar_background</item>
        <item name="android:textColorHint">@color/neutral_90</item>
        <item name="hintTextColor">@color/neutral_90</item>
        <item name="android:textSize">@dimen/h4TextSize</item>
        <item name="android:fontFamily">@font/manrope_regular</item>

    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowSoftInputMode">adjustResize</item>

    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/green</item>
    </style>

    <style name="tabLayoutCategoriesText" parent="TextAppearance.AppCompat">
        <item name="textAllCaps">false</item>
        <item name="color">@color/neutral_60</item>
        <item name="android:fontFamily">@font/manrope_medium</item>

    </style>

    <style name="homeFragmentTitles">
        <item name="android:fontFamily">@font/manrope_bold</item>
        <item name="android:textColor">@color/neutral_90</item>
        <item name="android:textSize">@dimen/h2TextSize</item>
    </style>

    <dimen name="h1TextSize">28sp</dimen>
    <dimen name="h2TextSize">24sp</dimen>
    <dimen name="h3TextSize">18sp</dimen>
    <dimen name="h4TextSize">15sp</dimen>
    <dimen name="h5TextSize">13sp</dimen>


</resources>