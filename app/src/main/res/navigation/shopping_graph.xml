<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shopping_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.koti.ui.view.fragments.shopping.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_productDetailsFragment"
            app:destination="@id/productDetailsFragment"
            app:enterAnim="@anim/slide_to_left"
            app:exitAnim="@anim/exit_to_left"
            app:popEnterAnim="@anim/slide_to_right"
            app:popExitAnim="@anim/exit_to_right" />
        <action
            android:id="@+id/action_homeFragment_to_searchResultFragment"
            app:destination="@id/searchResultFragment"
            app:enterAnim="@anim/slide_to_left"
            app:exitAnim="@anim/exit_to_left"
            app:popEnterAnim="@anim/slide_to_right"
            app:popExitAnim="@anim/exit_to_right"/>
    </fragment>
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.example.koti.ui.view.fragments.shopping.CartFragment"
        android:label="CartFragment"
        tools:layout="@layout/fragment_cart">
        <action
            android:id="@+id/action_cartFragment_to_productDetailsFragment"
            app:destination="@id/productDetailsFragment"
            app:enterAnim="@anim/slide_to_left"
            app:exitAnim="@anim/exit_to_left"
            app:popEnterAnim="@anim/slide_to_right"
            app:popExitAnim="@anim/exit_to_right"/>
        <action
            android:id="@+id/action_cartFragment_to_billingFragment"
            app:destination="@id/billingFragment"
            app:enterAnim="@anim/slide_to_left"
            app:exitAnim="@anim/exit_to_left"
            app:popEnterAnim="@anim/slide_to_right"
            app:popExitAnim="@anim/exit_to_right"/>
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.koti.ui.view.fragments.shopping.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile">

        <action
            android:id="@+id/action_profileFragment_to_allOrdersFragment"
            app:destination="@id/allOrdersFragment"
            app:enterAnim="@anim/slide_to_left"
            app:exitAnim="@anim/exit_to_left"
            app:popEnterAnim="@anim/slide_to_right"
            app:popExitAnim="@anim/exit_to_right"/>
        <action
            android:id="@+id/action_profileFragment_to_userAccountFragment"
            app:destination="@id/userAccountFragment"
            app:enterAnim="@anim/slide_to_left"
            app:exitAnim="@anim/exit_to_left"
            app:popEnterAnim="@anim/slide_to_right"
            app:popExitAnim="@anim/exit_to_right"/>
        <action
            android:id="@+id/action_profileFragment_to_savedAddressesFragment"
            app:destination="@id/savedAddressesFragment"
            app:enterAnim="@anim/slide_to_left"
            app:exitAnim="@anim/exit_to_left"
            app:popEnterAnim="@anim/slide_to_right"
            app:popExitAnim="@anim/exit_to_right"/>
    </fragment>
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.koti.ui.view.fragments.shopping.FavoritesFragment"
        android:label="FavoritesFragment"
        tools:layout="@layout/fragment_favorites">
        <action
            android:id="@+id/action_favoritesFragment_to_productDetailsFragment"
            app:destination="@id/productDetailsFragment"
            app:enterAnim="@anim/slide_to_left"
            app:exitAnim="@anim/exit_to_left"
            app:popEnterAnim="@anim/slide_to_right"
            app:popExitAnim="@anim/exit_to_right"/>
        <action
            android:id="@+id/action_favoritesFragment_to_homeFragment"
            app:destination="@id/homeFragment" />

    </fragment>
    <fragment
        android:id="@+id/productDetailsFragment"
        android:name="com.example.koti.ui.view.fragments.shopping.ProductDetailsFragment"
        android:label="ProductDetailsFragment"
        tools:layout="@layout/fragment_products_details">
        <argument
            android:name="product"
            app:argType="com.example.koti.data.model.Product" />
    </fragment>
    <fragment
        android:id="@+id/addressFragment"
        android:name="com.example.koti.ui.view.fragments.shopping.AddressFragment"
        android:label="AddressFragment"
        tools:layout="@layout/fragment_address"/>
    <fragment
        android:id="@+id/billingFragment"
        android:name="com.example.koti.ui.view.fragments.shopping.BillingFragment"
        android:label="BillingFragment"
        tools:layout="@layout/fragment_billing">
        <action
            android:id="@+id/action_billingFragment_to_addressFragment"
            app:destination="@id/addressFragment"
            app:enterAnim="@anim/slide_to_left"
            app:exitAnim="@anim/exit_to_left"
            app:popEnterAnim="@anim/slide_to_right"
            app:popExitAnim="@anim/exit_to_right"/>
        <argument
            android:name="totalPrice"
            app:argType="float" />
        <argument
            android:name="product"
            app:argType="com.example.koti.data.model.CartProduct[]" />
    </fragment>
    <fragment
        android:id="@+id/userAccountFragment"
        android:name="com.example.koti.ui.view.fragments.settings.UserAccountFragment"
        android:label="UserAccountFragment"
        tools:layout="@layout/fragment_user_account"/>
    <fragment
        android:id="@+id/allOrdersFragment"
        android:name="com.example.koti.ui.view.fragments.settings.AllOrdersFragment"
        android:label="AllOrdersFragment"
        tools:layout="@layout/fragment_orders">
        <action
            android:id="@+id/action_allOrdersFragment_to_orderDetailFragment"
            app:destination="@id/orderDetailFragment"
            app:enterAnim="@anim/slide_to_left"
            app:exitAnim="@anim/exit_to_left"
            app:popEnterAnim="@anim/slide_to_right"
            app:popExitAnim="@anim/exit_to_right"/>
    </fragment>
    <fragment
        android:id="@+id/orderDetailFragment"
        android:name="com.example.koti.ui.view.fragments.settings.OrderDetailFragment"
        android:label="OrderDetailFragment"
        tools:layout="@layout/fragment_order_detail">
        <argument
            android:name="order"
            app:argType="com.example.koti.data.model.Order" />
    </fragment>
    <fragment
        android:id="@+id/savedAddressesFragment"
        android:name="com.example.koti.ui.view.fragments.settings.SavedAddressesFragment"
        android:label="SavedAddressesFragment"
        tools:layout="@layout/fragment_saved_addresses">
        <action
            android:id="@+id/action_savedAddressesFragment_to_addressFragment"
            app:destination="@id/addressFragment"
            app:enterAnim="@anim/slide_to_left"
            app:exitAnim="@anim/exit_to_left"
            app:popEnterAnim="@anim/slide_to_right"
            app:popExitAnim="@anim/exit_to_right"/>
    </fragment>
    <fragment
        android:id="@+id/searchResultFragment"
        android:name="com.example.koti.ui.view.fragments.shopping.SearchResultFragment"
        android:label="SearchResultFragment"
        tools:layout="@layout/fragment_search_results">
        <action
            android:id="@+id/action_searchResultFragment_to_productDetailsFragment"
            app:destination="@id/productDetailsFragment"
            app:enterAnim="@anim/slide_to_left"
            app:exitAnim="@anim/exit_to_left"
            app:popEnterAnim="@anim/slide_to_right"
            app:popExitAnim="@anim/exit_to_right"/>
        <argument
            android:name="search"
            app:argType="string" />
    </fragment>
</navigation>