<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/welcomeLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ivWelcomeLogoMargin"
        android:layout_marginStart="@dimen/ivWelcomeLogoStartEndMargin"
        android:layout_marginEnd="@dimen/ivWelcomeLogoStartEndMargin"
        android:src="@drawable/koti_cropped_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="" />

    <TextView
        android:id="@+id/textWelcome"
        style="@style/h4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tvWelcomeMargin"
        android:text="@string/welcome_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcomeLogo" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/introButton"
        style="@style/blueButtonStyle"
        android:layout_width="@dimen/smallButtonWidth"
        android:layout_height="@dimen/smallButtonHeight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/start_button_text"
        android:layout_marginBottom="@dimen/buttonBottomMargin"/>

</androidx.constraintlayout.widget.ConstraintLayout>