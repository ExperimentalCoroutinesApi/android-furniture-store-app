<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="160dp"
        android:layout_height="240dp"
        android:background="@color/white"
        android:paddingBottom="14dp">

        <ImageView
            android:id="@+id/imgSpecialProduct"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="14dp"
            android:scaleType="fitXY"
            android:src="@color/green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvSpecialProductName"
            style="@style/textCardBlack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:text="@string/product_name_sample"
            app:layout_constraintEnd_toEndOf="@id/imgSpecialProduct"
            app:layout_constraintStart_toStartOf="@id/imgSpecialProduct"
            app:layout_constraintTop_toBottomOf="@id/imgSpecialProduct" />




        <ImageView
            android:id="@+id/imgStarSpec"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_star"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/imgSpecialProduct"
            app:tint="@color/orange_dark" />

        <TextView
            android:id="@+id/productRatingSpec"
            style="@style/textCardBlack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/product_rating_sample"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@id/imgStarSpec"
            app:layout_constraintStart_toEndOf="@id/imgStarSpec"
            app:layout_constraintTop_toTopOf="@id/imgStarSpec" />


        <TextView
            android:id="@+id/tvSpecialProductPrice"
            style="@style/textCardBlack"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:fontFamily="@font/manrope_bold"
            android:text="@string/discount_price"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@id/tvSpecialProductOldPrice"
            app:layout_constraintEnd_toEndOf="@id/imgSpecialProduct"
            app:layout_constraintStart_toStartOf="@id/imgSpecialProduct" />

        <TextView
            android:id="@+id/tvSpecialProductOldPrice"
            style="@style/textCardBlack"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/discount_price"
            app:layout_constraintBottom_toTopOf="@id/imgStarSpec"
            app:layout_constraintEnd_toEndOf="@id/imgSpecialProduct"
            app:layout_constraintStart_toStartOf="@id/imgSpecialProduct" />

        <ImageView
            android:id="@+id/goToProduct"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/neutral_50" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>