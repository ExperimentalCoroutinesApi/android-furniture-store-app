<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_light_background"
    android:elevation="0dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="88dp">

        <ImageView
            android:id="@+id/imgBestDeal"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/tvBestDealProductName"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/discount_item"
            app:layout_constraintStart_toEndOf="@id/imgBestDeal"
            app:layout_constraintTop_toTopOf="@id/imgBestDeal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/rubik_light"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/tvBestDealOldPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/discount_price_old"
            app:layout_constraintTop_toBottomOf="@id/tvBestDealProductName"
            app:layout_constraintStart_toEndOf="@id/tvBestDealNewPrice"
            android:textColor="@color/md_theme_gray_text"
            android:textSize="12sp"
            android:fontFamily="@font/rubik_regular"
            android:layout_marginStart="8dp"
            />

        <TextView
            android:id="@+id/tvBestDealNewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/discount_price"
            app:layout_constraintStart_toStartOf="@id/tvBestDealProductName"
            app:layout_constraintTop_toBottomOf="@id/tvBestDealProductName"

            android:textColor="@color/black"
            android:textSize="12sp"
            android:fontFamily="@font/rubik_regular"/>

        <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
            android:id="@+id/btn_see_product"
            android:layout_width="83dp"
            android:layout_height="28dp"
            android:background="@drawable/red_background"
            android:fontFamily="@font/rubik_light"
            android:text="@string/see_product"
            android:textColor="@color/cardview_light_background"
            android:textSize="11sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/tvBestDealProductName"
            app:layout_constraintTop_toTopOf="@id/tvBestDealProductName"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>