<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="370dp"
        android:layout_height="match_parent"
        android:background="@color/card_black_background"
        android:paddingBottom="15dp">

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="250dp"
            android:layout_height="140dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            android:scaleType="fitXY"
            android:src="@color/swamp_green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/inter_bold"
            android:text="@string/prodduct_name_sample"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgProduct" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_favorite"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="23dp"
            android:scaleType="centerCrop"
            android:src="@color/orange_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="6dp"
            android:src="@drawable/ic_favorite"
            app:layout_constraintBottom_toBottomOf="@id/img_favorite"
            app:layout_constraintEnd_toEndOf="@id/img_favorite"
            app:layout_constraintStart_toStartOf="@id/img_favorite"
            app:layout_constraintTop_toTopOf="@id/img_favorite"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/star_img"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_star"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/orange_dark" />

        <TextView
            android:id="@+id/productRating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/inter_bold"
            android:text="@string/product_rating_sample"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/star_img"
            app:layout_constraintStart_toEndOf="@id/star_img"
            app:layout_constraintTop_toTopOf="@id/star_img" />


        <TextView
            android:id="@+id/tvProductNewPrice"
            android:layout_width="wrap_content"
            android:layout_height="33sp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/grey_background"
            android:fontFamily="@font/inter_extra_bold"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/discount_price"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>