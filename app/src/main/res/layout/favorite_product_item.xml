<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/card_grey_background"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:paddingBottom="1dp">

        <ImageView
            android:id="@+id/imageFavoriteProduct"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:scaleType="centerCrop"
            android:src="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvProductFavoriteName"
            style="@style/textInterBlack"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:textSize="15sp"
            android:text="CHAIR"
            app:layout_constraintStart_toEndOf="@id/imageFavoriteProduct"
            app:layout_constraintTop_toTopOf="@id/imageFavoriteProduct" />

        <TextView
            android:id="@+id/tvProductFavoritePrice"
            android:layout_width="wrap_content"
            android:layout_height="33sp"
            android:background="@drawable/grey_background"
            android:fontFamily="@font/inter_extra_bold"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/discount_price"
            style="@style/textInterWhite"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/tvProductFavoriteName"
            app:layout_constraintTop_toBottomOf="@id/tvProductFavoriteName" />

        <LinearLayout
            android:id="@+id/linearAddFavToCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            android:layout_marginBottom="7dp"
            android:layout_marginEnd="7dp">

            <TextView
                android:id="@+id/tvAddToCart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ADD TO CART"
                style="@style/smallTextInterGrey"
                android:layout_weight="1"
                android:textSize="11sp"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:id="@+id/imagePlusToCart"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_shopping_cart"
                android:background="@drawable/settings_items_background"
                android:backgroundTint="@color/orange_dark"
                android:layout_gravity="center_vertical"
                app:tint="@color/white" />


        </LinearLayout>


        <ImageView
            android:id="@+id/imageDeleteFavorite"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_minus"
            android:padding="6dp"
            android:background="@drawable/settings_items_background"
            android:backgroundTint="@color/orange_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>